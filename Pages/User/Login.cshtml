@page
@model Tp_Panier.Pages.User.LoginModel
@{
    ViewData["Title"] = "Connexion";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-group">
        <label asp-for="UserLogin.Login"></label>
        <input asp-for="UserLogin.Login" class="form-control" />
        <span asp-validation-for="UserLogin.Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserLogin.Password"></label>
        <input asp-for="UserLogin.Password" type="password" class="form-control" />
        <span asp-validation-for="UserLogin.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Se connecter</button>
</form>
