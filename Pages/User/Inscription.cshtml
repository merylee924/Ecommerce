@page
@model Tp_Panier.Pages.User.InscriptionModel
@{
    ViewData["Title"] = "Inscription";
}

<h2>@ViewData["Title"]</h2>

<!-- Message de succès -->
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<!-- Formulaire d'inscription -->
<form method="post">
    <div class="form-group">
        <label asp-for="UserRegister.Nom"></label>
        <input asp-for="UserRegister.Nom" class="form-control" />
        <span asp-validation-for="UserRegister.Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRegister.Prenom"></label>
        <input asp-for="UserRegister.Prenom" class="form-control" />
        <span asp-validation-for="UserRegister.Prenom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRegister.Login"></label>
        <input asp-for="UserRegister.Login" class="form-control" />
        <span asp-validation-for="UserRegister.Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRegister.Password"></label>
        <input asp-for="UserRegister.Password" class="form-control" />
        <span asp-validation-for="UserRegister.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserRegister.ConfirmPassword"></label>
        <input asp-for="UserRegister.ConfirmPassword" class="form-control" />
        <span asp-validation-for="UserRegister.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">S'inscrire</button>
</form>

<!-- Affichage des erreurs -->
@if (ViewData.ModelState.ErrorCount > 0)
{
    <ul class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>@error.ErrorMessage</li>
        }
    </ul>
}
