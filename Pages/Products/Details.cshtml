@page
@model Ecommerce.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div class="text-center">
        <img src="@(!string.IsNullOrEmpty(Model.Product.ImageURL) ? Model.Product.ImageURL : "/images/default-image.jpg")"
             alt="Product Image" class="product-image" style="width: 300px; height: auto;" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ImageURL)
        </dd>
    </dl>
</div>
<div>
    <form method="post" asp-page-handler="AddToCart">
        <input type="hidden" name="productId" value="@Model.Product.Id" />
        <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<!-- Debug: Show the image URL -->
<p>Image URL: @Model.Product.ImageURL</p>
